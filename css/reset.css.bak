html, .container { 
    height: 100%;
    background-image: linear-gradient(to top right, LightGray, green);
    font-family: 'Roboto','Open Sans','Arial';
}

.container {
    width: 400px; 
    height: 400px; 
    margin: 8% auto; 
    background: #f9f9f9; 
    border-radius: 5px; 
    position: relative; 
}

h3 {
    text-align: center;  
    margin-bottom: 40px;
    color: black;
    font-size: x-large;
}

.container form {
    width: 280px;
    position: absolute; 
    top: 100px; 
    left: 40px;
}

form input { 
    width: 100%; 
    padding: 10px 5px;
    margin: 5px 0;
    border: 0;
}
.btn-box {
    width: 100%; 
    margin: 30px auto; 
    text-align: center;
}

form button { 
    width: 100px; 
    height: 35px; 
    margin: 0 10px; 
    background: linear-gradient(to right, #ffffd4, #ff00d4); 
    border: 0;
    outline: none; 
    cursor: pointer;
    border-radius: 50px;
}

@media screen 
    and (max-width: 500px) {
        .container {
            margin: auto;
        }
    }